// Write a C++ program using array of objects to compare SPI of 10 different students and print whose SPI is highest.

#include<iostream>
using namespace std;
class student
{
		private:
			float spi;
			string name;
		public:
			void getdata()
		{
    	 cout<<"My Name Is Bhalani Pal"<<endl;
    cout<<"En_no :: 220130318080 "<<endl;
			cout<<"Enter the Name::";
			cin>>name;
			cout<<"Enter the SPI::";
			cin>>spi;
		}
		void putdata()
		{
			cout<<name<<endl;
			cout<<spi<<endl;
		}
		float sp()
		{
			return spi;
		}
		string na()
		{
			return name;
		}
};
int main()
{
	int i;
	student s[10];
	for(i=0;i<10;i++)
	{
		s[i].putdata();
	}
	for(i=0;i<10;i++)
	{
		s[i].getdata();
	}
	int high=0;
	for(i=1;i<10;i++)
	{
		if(s[i].sp()>s[high].sp())
		{
			high=i;
		}
	}
	cout<<"Highest spi and name is :: "<<s[high].sp()<<" & "<<s[high].na();
	return 0;
	
}
